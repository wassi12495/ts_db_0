{
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "The Person's first name"
    },
    "lastName": {
      "type": "string",
      "description": "The Person's last name"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "birthday": {
      "type": "string",
      "format": "date",
      "editable": "false"
    },
    "phone": {
      "type": "string",
      "pattern": "^([0-9]{3})?[0-9]{3}[0-9]{4}$",
      "editable": "true"
    },
    "credit_card": {
      "type": "number"
    },
    "billing_address": {
      "type": "string"
    }
  },
  "required": ["firstName", "email", "phone", "birthday"],
  "dependencies": {
    "credit_card": ["billing_address"]
  }
}
